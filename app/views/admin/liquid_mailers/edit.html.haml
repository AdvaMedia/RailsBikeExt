- title t('.title', :type => resource.class.name.capitalize)

- content_for :submenu do
	= render 'admin/shared/menu/liquid_mailers'
	
= semantic_form_for resource, :as => :liquid_mailer, :url => resource_url(resource) do |form|
	= render 'form', :f => form
	
	= render 'admin/shared/form_actions', :back_url => collection_url, :button_label => :update