- content_for :head do
	= include_javascripts :image_picker, :edit_custom_fields
	= include_stylesheets :editable_elements, :fancybox
	
- if can?(:manage, resource)
	= f.foldable_inputs :name => t('.information'), :class=>"liquid_mailers off" do
		= f.input :subject
	- unless resource.new_record?
		= f.foldable_inputs :name => t('.advanced'), :class=>"liquid_mailers_adv off" do
			= f.custom_input :template, :css => 'code full', :with_label => false do
				= f.label :template
				%code{ :class => 'html' }
					= f.text_area :template
				= f.errors_on :template
				.more
					= link_to t('admin.image_picker.link'), admin_theme_assets_path, :id => 'image-picker-link', :class => 'picture'
			= f.custom_input :content_types, :label=>"content_types", :css => 'has-many' do
				.has-many-selector
					%p{ :style => f.object.send(:content_types).empty? ? '' : 'display: none'  }= t('.empty')
					%ul

					%script{ :type => 'text/x-mustache-template', :name => 'template', :'data-base-input-name' => "liquid_mailer[content_types]" }
						%li{ :class => "item {{behaviour_flag}}" }
							%span.handle= image_tag 'admin/form/icons/drag.png'
							{{^if_template}}
							%input{ :name => '{{base_name}}[]', :value => '{{{id}}}', :type => 'hidden', :'data-field' => 'id' }
							{{/if_template}}
			
							%strong {{label}}
							{{#if_template}}
							= select_tag 'label', ''
							{{/if_template}}

							%span.actions
								= link_to image_tag('admin/form/icons/trash.png'), '#', :class => 'remove'
								%button{ :class => 'button light mini add', :type => 'button' }
									%span!= t('admin.buttons.new_item')
					%script{ :type => 'text/javascript', :name => 'data' }
						!= collection_to_js(ContentType.all.collect{ |c| ["#{c.name}", c.id.to_s] }, :taken_ids => f.object.content_types.collect{|n| n.id.to_s})